{
  "name": "spec-mapper",
  "displayName": "Spec Mapper",
  "description": "A description for your VS Code extension.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "command": "spec-mapper.getContextForSelection",
          "when": "editorHasSelection",
          "title": "spec-mapper: Load selected text"
        },
        {
          "command": "spec-mapper.loadActiveFile",
          "title": "spec-mapper: Load current file"
        }
      ],
      "explorer/context": [
        {
          "command": "spec-mapper.openAndLoadFile",
          "when": "!explorerResourceIsFolder",
          "title": "spec-mapper: Open and load file"
        }
      ]
    },
    "commands": [
      {
        "command": "spec-mapper.showWebview",
        "title": "Start Spec Mapper"
      },
      {
        "command": "spec-mapper.loadActiveFile",
        "title": "Open current file in Spec Mapper"
      },
      {
        "command": "spec-mapper.openAndLoadFile",
        "title": "Open and load file in Spec Mapper"
      },
      {
        "command": "spec-mapper.getContextForSelection",
        "title": "Get Context for Selection"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -watch -p .",
    "prepublish": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^4.8.0",
    "@types/vscode": "^1.70.0",
    "vsce": "^2.10.0"
  }
}
